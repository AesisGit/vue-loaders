{
  "name": "vue-loaders",
  "version": "1.0.7",
  "homepage": "https://github.com/Hokid/vue-loaders",
  "description": "Vue component wrappers for loaders.css (https://github.com/ConnorAtherton/loaders.css)",
  "author": "Kirill Khoroshilov <mr.hokid@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build ./src/index.js --target lib --name VueLoaders --dest dist",
    "lint": "vue-cli-service lint"
  },
  "files": [
    "dist/",
    "src/",
    "demo.html"
  ],
  "module": "dist/VueLoaders.umd.js",
  "main": "dist/VueLoaders.umd.js",
  "style": "dist/VueLoaders.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hokid/vue-loaders.git"
  },
  "bugs": {
    "url": "https://github.com/Hokid/vue-loaders/issues"
  },
  "keywords": [
    "vue",
    "vuejs",
    "vue-loaders",
    "loader",
    "loaders.css",
    "animation",
    "animate",
    "spinner",
    "loading",
    "css",
    "ui",
    "progress",
    "component",
    "lib",
    "indicator",
    "busy",
    "wait",
    "idle",
    "plugin"
  ],
  "dependencies": {
    "loaders.css": "^0.1.2",
    "vue": "^2.5.13"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.1",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.1",
    "@vue/cli-service": "^3.0.0-beta.1",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
